// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================
// MODEL DEFINISI KITA
// ===================================

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String

  // Data Sheet - Fungsional
  firstName     String
  lastName      String
  birthDate     DateTime
  bio           String? // Tanda ? berarti opsional
  jobTitle      String?
  education     String?

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
